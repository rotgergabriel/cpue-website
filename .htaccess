RewriteEngine On

RewriteBase /cpue-website/

RewriteRule ^city/([^/]+)$ public/index.php?view=city&id=$1 [L,QSA]
RewriteRule ^comitato/([^/]+)$ public/index.php?view=comitato&id=$1 [L,QSA]

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_URI} !^/cpue-website/public/
RewriteRule ^([^/]+)$ public/index.php?view=$1 [L,QSA]

RewriteRule ^$ public/index.php?view=index [L,QSA]

Options -Indexes -MultiViews